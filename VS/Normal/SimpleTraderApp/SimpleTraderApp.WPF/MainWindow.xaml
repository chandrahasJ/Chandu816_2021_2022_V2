<Window x:Class="SimpleTraderApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleTraderApp.WPF"
        xmlns:controls ="clr-namespace:SimpleTraderApp.WPF.Controls"
        mc:Ignorable="d"
        Title="Simple Investor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:NavigationBar Grid.Row="0" DataContext="{Binding Navigator}"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ContentControl Content="{Binding Navigator.CurrentViewModel}" />
        </ScrollViewer>
    </Grid>
</Window>
