<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:bcs="clr-namespace:BarcodeScanner.Mobile;assembly=BarcodeScanner.Mobile.Maui"
             x:Class="ReviewMate.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label x:Name="lblBarCodeResults" FontSize="Medium" />
            <bcs:CameraView 
                HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                TorchOn="False" ScanInterval="100" x:Name="Camera"
                IsScanning="True"
                VibrationOnDetected="True" OnDetected="CameraView_OnDetected" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
